rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is whitelisted
    function isWhitelisted() {
      // Check both exact match and lowercase to handle casing differences
      return exists(/databases/$(database)/documents/allowed_users/$(request.auth.token.email)) ||
             exists(/databases/$(database)/documents/allowed_users/$(request.auth.token.email.lower()));
    }

    // USERS: TEMPORARILY OPEN FOR SEEDING
    match /users/{userId} {
      // allow create: if request.auth != null && request.auth.uid == userId;
      // allow read, update: if request.auth != null && request.auth.uid == userId && isWhitelisted();
      allow read, write: if true;
    }

    // ALLOWED_USERS: Read-only for authenticated users (to check their own status)
    // Write restricted to admins (or temporarily public for seeding)
    match /allowed_users/{email} {
      allow read: if request.auth != null;
      // CHANGE THIS TO 'if true' TEMPORARILY TO SEED, THEN BACK TO 'if false' OR ADMIN ONLY
      allow write: if false; 
    }

    // MARKET: Public read, Write restricted (Temporarily Open)
    match /market/{itemId} {
      allow read: if true;
      allow write: if true; // Temporarily open for seeding
    }
  }
}
