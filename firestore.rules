rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is whitelisted
    function isWhitelisted() {
      let email = request.auth.token.email.lower();
      return exists(/databases/$(database)/documents/allowed_users/$(email));
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS: Read for all whitelisted, Write for Owner or Admin
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && isWhitelisted();
      allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    // ALLOWED_USERS: Allow reading ONLY your own entry to verify whitelist status
    match /allowed_users/{email} {
      allow get: if request.auth != null && request.auth.token.email.lower() == email.lower();
      allow list: if isAdmin(); // Only admin can list everyone
      allow write: if isAdmin(); 
    }

    // MARKET: Public read, Write for Admin
    match /market/{itemId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // EVENTS: Only whitelisted users can see the game log
    match /events/{eventId} {
      allow read: if request.auth != null && isWhitelisted();
      allow write: if isAdmin();
    }
  }
}
