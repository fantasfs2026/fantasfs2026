rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is whitelisted
    function isWhitelisted() {
      return exists(/databases/$(database)/documents/allowed_users/$(request.auth.token.email)) ||
             exists(/databases/$(database)/documents/allowed_users/$(request.auth.token.email.lower()));
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS: Owner or Admin
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    // ALLOWED_USERS: Read for all auth, Write for Admin
    match /allowed_users/{email} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); 
    }

    // MARKET: Public read, Write for Admin
    match /market/{itemId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }
  }
}
